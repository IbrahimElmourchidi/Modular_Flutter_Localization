{
  "name": "modular-flutter-l10n",
  "displayName": "Modular Flutter L10n",
  "description": "Modular localization for Flutter with full Flutter Intl compatibility. Organize translations by feature/module for better scalability.",
  "version": "2.0.0",
  "publisher": "UtaniumOrg",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.70.0",
    "node": ">=16.0.0"
  },
  "license": "MIT",
  "author": {
    "name": "Ibrahim El Mourchidi",
    "email": "ibrahimelmourchidi@gmail.com",
    "url": "https://github.com/IbrahimElmourchidi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IbrahimElmourchidi/Modular_Flutter_Localization.git"
  },
  "bugs": {
    "url": "https://github.com/IbrahimElmourchidi/Modular_Flutter_Localization/issues"
  },
  "homepage": "https://github.com/IbrahimElmourchidi/Modular_Flutter_Localization#readme",
  "keywords": [
    "flutter",
    "dart",
    "l10n",
    "i18n",
    "localization",
    "internationalization",
    "modular",
    "arb",
    "intl",
    "translations",
    "multi-language",
    "flutter-intl",
    "code-generation"
  ],
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "extensionDependencies": [
    "Dart-Code.flutter"
  ],
  "activationEvents": [
    "onLanguage:dart",
    "workspaceContains:**/pubspec.yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "json",
        "extensions": [
          ".arb"
        ],
        "aliases": [
          "ARB"
        ]
      }
    ],
    "commands": [
      {
        "command": "modularL10n.initialize",
        "title": "Initialize",
        "category": "Modular L10n",
        "icon": "$(rocket)"
      },
      {
        "command": "modularL10n.generate",
        "title": "Generate Translations",
        "category": "Modular L10n",
        "icon": "$(sync)"
      },
      {
        "command": "modularL10n.addKey",
        "title": "Add Translation Key",
        "category": "Modular L10n",
        "icon": "$(add)"
      },
      {
        "command": "modularL10n.addLocale",
        "title": "Add Locale",
        "category": "Modular L10n",
        "icon": "$(globe)"
      },
      {
        "command": "modularL10n.removeLocale",
        "title": "Remove Locale",
        "category": "Modular L10n",
        "icon": "$(trash)"
      },
      {
        "command": "modularL10n.createModule",
        "title": "Create New Module",
        "category": "Modular L10n",
        "icon": "$(new-folder)"
      },
      {
        "command": "modularL10n.addL10nFolder",
        "title": "Add l10n Folder",
        "category": "Modular L10n",
        "icon": "$(new-folder)"
      },
      {
        "command": "modularL10n.migrateFromFlutterIntl",
        "title": "Migrate from Flutter Intl",
        "category": "Modular L10n",
        "icon": "$(arrow-right)"
      },
      {
        "command": "modularL10n.checkCompatibility",
        "title": "Check Compatibility with Flutter Intl",
        "category": "Modular L10n",
        "icon": "$(warning)"
      },
      {
        "command": "modularL10n.extractToArb",
        "title": "Extract String to ARB",
        "category": "Modular L10n",
        "icon": "$(export)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "modularL10n.addL10nFolder",
          "when": "explorerResourceIsFolder",
          "group": "modularL10n@1"
        }
      ],
      "commandPalette": [
        {
          "command": "modularL10n.initialize",
          "when": "workspaceContains:**/pubspec.yaml"
        },
        {
          "command": "modularL10n.generate",
          "when": "workspaceContains:**/pubspec.yaml"
        },
        {
          "command": "modularL10n.addKey",
          "when": "workspaceContains:**/pubspec.yaml"
        },
        {
          "command": "modularL10n.addLocale",
          "when": "workspaceContains:**/pubspec.yaml"
        },
        {
          "command": "modularL10n.removeLocale",
          "when": "workspaceContains:**/pubspec.yaml"
        },
        {
          "command": "modularL10n.createModule",
          "when": "workspaceContains:**/pubspec.yaml"
        },
        {
          "command": "modularL10n.migrateFromFlutterIntl",
          "when": "workspaceContains:**/pubspec.yaml"
        },
        {
          "command": "modularL10n.checkCompatibility",
          "when": "workspaceContains:**/pubspec.yaml"
        },
        {
          "command": "modularL10n.extractToArb",
          "when": "false"
        },
        {
          "command": "modularL10n.addL10nFolder",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "Modular L10n",
      "properties": {
        "modularL10n.className": {
          "type": "string",
          "default": "ML",
          "description": "Generated class name (ML = Modular Localization). Use something other than 'S' to avoid conflicts with Flutter Intl.",
          "pattern": "^[A-Z][a-zA-Z0-9]*$",
          "patternErrorMessage": "Class name must be PascalCase (e.g., ML, AppL10n)"
        },
        "modularL10n.outputPath": {
          "type": "string",
          "default": "lib/generated/modular_l10n",
          "description": "Output directory for generated Dart files (different from Flutter Intl's 'lib/generated' to avoid conflicts)"
        },
        "modularL10n.defaultLocale": {
          "type": "string",
          "default": "en",
          "description": "Default locale to use when translations are missing",
          "pattern": "^[a-z]{2}(_[A-Z]{2}|_[A-Z][a-z]{3}(_[A-Z]{2})?)?$",
          "patternErrorMessage": "Locale must be valid format (e.g., en, en_US, zh_Hans_CN)"
        },
        "modularL10n.arbFilePattern": {
          "type": "string",
          "default": "**/l10n/*.arb",
          "description": "Glob pattern to find ARB files (automatically excludes intl_*.arb files)"
        },
        "modularL10n.generateCombinedArb": {
          "type": "boolean",
          "default": true,
          "description": "Generate combined ARB files in the output directory"
        },
        "modularL10n.useDeferredLoading": {
          "type": "boolean",
          "default": false,
          "description": "Generate localization code that uses deferred loading (recommended for web apps)"
        },
        "modularL10n.watchMode": {
          "type": "boolean",
          "default": true,
          "description": "Automatically regenerate translations when ARB files change"
        },
        "modularL10n.compatibility.warnOnConflict": {
          "type": "boolean",
          "default": true,
          "description": "Show warning when potential Flutter Intl conflicts are detected"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run clean && npm run compile:prod",
    "compile": "tsc -p ./",
    "compile:prod": "tsc -p ./ --sourceMap false",
    "watch": "tsc -watch -p ./",
    "clean": "node scripts/clean.js",
    "verify": "node scripts/verify-setup.js",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies",
    "version:patch": "npm version patch && npm run package",
    "version:minor": "npm version minor && npm run package",
    "version:major": "npm version major && npm run package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.45.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "glob": "^8.1.0",
    "yaml": "^2.3.4"
  }
}